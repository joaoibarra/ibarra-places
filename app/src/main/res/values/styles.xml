<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextListTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/listTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/listDescription</item>
    </style>

</resources>
